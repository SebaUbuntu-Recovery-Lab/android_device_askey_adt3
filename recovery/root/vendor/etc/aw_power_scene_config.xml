<sceneconfigs>
    <scene name="INTERACTIVE">
        <set resource="cpu_governor" value="schedutil"/>
        <set resource="dfs_governor" value="sunxi_actmon"/>
        <set resource="io_schedule" value="mq_deadline_low_latency"/>
        <set resource="thermal_control" value="enabled"/>
    </scene>
    <scene name="LAUNCH">
        <set resource="dfs_governor" value="performance"/>
        <set resource="cpu_governor" value="performance"/>
        <set resource="io_schedule" value="mq_deadline_read_priority_latency"/>
    </scene>
    <scene name="SUSTAINED_PERFORMANCE">
        <set resource="dfs_governor" value="performance"/>
        <set resource="cpu_governor" value="performance"/>
        <set resource="io_schedule" value="mq_deadline_high_batch"/>
        <!-- <set resource="thermal_control" value="disabled"/> -->
    </scene>
    <scene name="GAME">
        <set resource="dfs_governor" value="performance"/>
        <set resource="cpu_governor" value="performance"/>
    </scene>
    <scene name="GAME_LOADING">
        <set resource="dfs_governor" value="performance"/>
        <set resource="cpu_governor" value="performance"/>
    </scene>
    <scene name="FIXED_PERFORMANCE">
        <set resource="dfs_governor" value="performance"/>
        <set resource="cpu_governor" value="performance"/>
        <set resource="io_schedule" value="mq_deadline_high_batch"/>
        <!-- <set resource="thermal_control" value="disabled"/> -->
    </scene>
    <scene name="DISPLAY_INACTIVE">
        <set resource="tp_idle" value="idle"/>
        <set resource="uclamp_limit" value="limit"/>
    </scene>
    <scene name="wifi_perf">
        <set resource="cpu_governor" value="performance"/>
    </scene>
    <scene name="type_c_audio_output">
        <set resource="dfs_governor" value="performance"/>
    </scene>
    <scene name="double_display_output">
        <set resource="dfs_governor" value="performance"/>
    </scene>
    <scene name="camera_stream">
        <set resource="dfs_governor" value="performance"/>
    </scene>
    <scene name="enable_uclamp_limit">
        <set resource="uclamp_limit" value="limit"/>
    </scene>
    <scene name="booting">
        <set resource="dfs_governor" value="performance"/>
        <set resource="cpu_governor" value="performance"/>
        <set resource="io_schedule" value="io_boot"/>
        <set resource="thermal_control" value="disabled"/>
    </scene>
    <scene name="face_unlock">
        <set resource="dfs_governor" value="performance"/>
        <set resource="cpu_governor" value="performance"/>
    </scene>
</sceneconfigs>
